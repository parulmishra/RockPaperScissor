@{
  Layout = "_Layout";
}
<div class="jumbotron">
  <h1>Welcome to the Rock Paper Scissor Game</h1>
  <form action="/play" method="post">
    <div class="row">
      <div class="col-md-4">
        <input type="hidden" id="valueHolder" name="choice" value="">
      <div class="form-group">
        <label for="rock">ROCK</label>
        <input type="hidden" value="Rock" >
        <img src="img/Rock.jpg" />
      </div>

      <div class="form-group">
        <label for="rock">PAPER</label>
        <input type="hidden" value="Paper">
        <img src="img/Paper.jpg" />
      </div>

      <div class="form-group">
        <label for="rock">SCISSOR</label>
        <input type="hidden" value="Scissor">
        <img src="img/Scissor.jpg"/>
      </div>

      <div id="userchoice" class="well">
        @if(Model != null)
        {
          <p>Your Choice is :@Model.GetUserChoice()</p>
        }
        <p id="tempdisplay">Your Choice is :<span id="tempPlayer"></span></p>
      </div>

      <div id="compchoice"class="well">
        @if(Model != null)
        {
          <p>Computer Choice is :@Model.GetComputerChoice()</p>
        }
      </div>

      <div id="result" class="well">
        @if(Model != null)
        {
          <p>The result is: @Model.Play()</p>
        }
      </div>
    </div>
  </div>
    <button type="submit">Play</button>
  </form>
</div>
